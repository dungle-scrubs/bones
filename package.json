{
	"name": "bones",
	"version": "2.0.0",
	"type": "module",
	"description": "Competitive code review game - hunt for bugs, doc drift, security issues, and more",
	"bin": {
		"bones": "./dist/cli.js"
	},
	"main": "dist/cli.js",
	"scripts": {
		"build": "tsc",
		"dev": "bun src/cli.ts",
		"start": "bun dist/cli.js",
		"serve": "bun src/server.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@mariozechner/pi-agent-core": "^0.52.9",
		"@mariozechner/pi-ai": "^0.52.9",
		"@sinclair/typebox": "^0.34.48",
		"commander": "^14.0.3",
		"hono": "^4.7.6",
		"ink": "^6.6.0",
		"react": "^19.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "^1.2.10",
		"@types/react": "^19.2.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"typescript": "^5.9.3"
	}
}
