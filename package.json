{
	"name": "bones",
	"version": "2.0.0",
	"type": "module",
	"description": "Competitive code review game - hunt for bugs, doc drift, security issues, and more",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"serve": "tsx src/server.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@hono/node-server": "^1.13.8",
		"better-sqlite3": "^11.7.0",
		"hono": "^4.7.6",
		"ink": "^6.6.0",
		"react": "^19.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^22.19.5",
		"@types/react": "^19.2.8",
		"@vitest/coverage-v8": "^4.0.17",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	}
}
